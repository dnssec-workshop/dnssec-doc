# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

auto lo:2
iface lo:2 inet static
address 127.0.0.2
network 255.0.0.0


# The primary network interface
# DNS Resolver
auto eth0
allow-hotplug eth0
iface eth0 inet static
address 10.20.8.1
network 255.255.0.0
gateway 10.20.0.1

# IPv6 f√ºr DNSViz Resolver
auto eht0:6
allow-hotplug eth0:6
iface eth0:6 inet6 static
address 10:20:8::6
netmask 64

# Webserver
auto eth0:23
allow-hotplug eth0:23
iface eth0:23 inet static
address 10.20.8.23
network 255.255.0.0
